{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/services/*": ["src/services/*"],
      "@/utils/*": ["src/utils/*"],
      "@/types/*": ["src/types/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/constants/*": ["src/constants/*"],
      "@/config/*": ["src/config/*"],
      "@/assets/*": ["src/assets/*"],
      "@/styles/*": ["src/styles/*"],
      "@/tests/*": ["tests/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "jest", "@types/testing-library__jest-dom"],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "playwright.config.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "out",
    "coverage",
    "TestResults",
    "test-results",
    "playwright-report",
    "bin",
    "obj",
    "**/*.min.js",
    "**/*.min.css",
    "**/*.map",
    "Source/**/*",
    ".devcontainer",
    ".github",
    ".vscode",
    "Scripts",
    "Monitoring",
    "Nginx",
    "Deployment",
    "Build",
    "Documents",
    "Logs",
    "Temp",
    "docker-compose*.yml",
    "Dockerfile*",
    "*.config.js",
    "*.config.ts"
  ],
  "references": [
    {
      "path": "./src"
    },
    {
      "path": "./tests"
    }
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      "**/build",
      "**/dist",
      "**/out",
      "**/coverage",
      "**/TestResults",
      "**/test-results",
      "**/playwright-report",
      "**/bin",
      "**/obj",
      "**/.git",
      "**/.vs",
      "**/.vscode",
      "**/.idea",
      "**/tmp",
      "**/temp"
    ]
  }
}